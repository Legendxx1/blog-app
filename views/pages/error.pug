doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{error.status || 500}
    link(href="/public/styles/error.css", rel="stylesheet")
  body
    main
      .number #{error.status || 500}
      .message #{error.message || "Internal Server Error"}
      if (error.status == 404)
        a(href="/") Back to home
